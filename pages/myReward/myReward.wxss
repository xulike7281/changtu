/* pages/myReward/myReward.wxss */
.container{
  padding-bottom: 30rpx;
}
.myReward-tab {
  width: 100%;
  height: 86rpx;
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  line-height: 86rpx;
  color: #666;
}

.activeTab {
  border-bottom: 4rpx solid #ff0000;
  color: #ff0000;
}
.coupon-wrap{
  width: 100%;
  padding: 20rpx 35rpx 0rpx 35rpx;
  box-sizing: border-box;
}
.couponDetail{
  width: 100%;
border-radius:12rpx;
background: #fff;
padding:  28rpx 25rpx 28rpx 52rpx;
box-sizing: border-box;
font-size: 32rpx;
color: #000;
}
.arrow-top{

  border-color: #747474;
}
.arrow-right{
  width: 14rpx;
  height: 24rpx;
  /* border-color: #747474; */
}

.coupon-item{
  position: relative;
  width: 100%;
  height: 230rpx;
  background: url("https://ct.jikeyun.net/xcx_img/coupon2.png")  no-repeat 44rpx 32rpx, url("https://ct.jikeyun.net/xcx_img/couon_line.png");
  background-size: 104rpx 88rpx,100% 100%;
  background-origin: padding-box;
  padding-top:32rpx;
  padding-left: 205rpx;
}
.coupon-use{
  position: absolute;
  bottom:0rpx;
  left: 0rpx;
  width: 99%;
  height: 74rpx;
  padding: 0rpx 36rpx 0rpx 50rpx;
}
.coupon-use-detail{
  padding:20rpx 0rpx 30rpx 50rpx;
  margin-top: -20rpx;
  border-radius: 0rpx 0rpx 10px 10px;
  position: relative;
  z-index: 9;
}

.myReward-main {
  width: 100%;
  padding: 0rpx 30rpx 0rpx 30rpx;
  box-sizing: border-box;
  border-bottom:1px solid rgba(0,0,0,0.1)
}
.main-top{
  line-height: 78rpx;
}
.reward-detail {
  padding-bottom: 30rpx;
}
.reward-list{
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.re-li{
  width: 100%;
  line-height: 100rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  border-bottom:1px solid rgba(0,0,0,0.1)
}
.re-li:last-child{
   border: none; 
}
.reward-btn{
  margin-top: 65rpx;
  width: 516rpx;
  height: 100rpx;
  background: #EB3323;
  border-radius: 50rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
