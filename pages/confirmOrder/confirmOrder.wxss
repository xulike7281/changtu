/* pages/confirmOrder/confirmOrder.wxss */

.shopPrice-wrap {
  width: 100%;
  height: 184rpx;
  margin-top: 20rpx ;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}

.shopPrice-wrap image {
  display: block;
  width: 200rpx;
  height: 162rpx;
}

.contactWay {
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.phone, .carNo {
  width: 100%;
  height: 100rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.phone {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.phone input {
  width: 200rpx;
}

.carNo input {
  width: 170rpx;
}

.selectSpec {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}

.specTit {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  padding-left: 30rpx;
  color: #323232;
  font-size: 32rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.specItem-wrap {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.specItem-wrap .active {
  color: #e93a44;
  border: 4rpx solid rgba(233, 58, 68, 1);
}

.specItem-wrap .notactive {
  color: #666;
  border: 2px solid rgba(102, 102, 102, 1);
}

.specItem-wrap .specItem {
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-right: 40rpx;
}

.specItem:last-child {
  margin-right: 0rpx;
}

.applyStores {
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}

.stores-tit {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.stores-desc {
  width: 100%;
  padding: 20rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  text-indent: 1.5rem;
  color: #666;
}

.wxPay {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  text-align: center;
}
.pay-money{
  margin-right: 20rpx;
}

.pay-btn {
  width: 282rpx;
  height: 100rpx;
  background: #e93a44;
  color:#fff;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
}
